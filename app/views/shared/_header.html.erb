<div id="main-header" class="sticky top-0 z-10">
  <% if @account.trialing? %>
    <div class="bg-stone-200 text-stone-700 py-2 text-center text-sm border-b border-stone-300">
      You have <span class="font-medium"><%= pluralize(@account.trial_days_remaining, 'day') %></span> left in your free trial.
      <%= link_to checkout_plans_path, data: { turbo: false }, class: "font-medium underline" do %>Pick a plan for $0<% end %> to keep access.
    </div>
  <% end %>
  <div class="bg-stone-100 border-b border-stone-200">
    <div class="container mx-auto px-3 flex justify-between h-[50px] items-center">
      <%= left_side.html_safe %>
      <div class="flex gap-4 items-center">
        <div class="relative inline-block" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="flex items-center focus:outline-none hover:bg-stone-100 focus:ring-4 focus:ring-stone-100 rounded-lg gap-1 font-medium cursor-pointer">
            <span class="inline-flex size-8 items-center justify-center rounded-full bg-stone-200 outline -outline-offset-1 outline-black/5">
              <span class="text-sm font-medium text-stone-700"><%= @account.first_name&.match(/[a-zA-Z]/)&.to_s %></span>
            </span>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute right-0 mt-1.5 w-56 origin-top-right divide-y divide-stone-100 rounded-md bg-white shadow-lg outline-1 outline-black/5 animate-fade-in">
            <div class="px-4 py-3">
              <p class="truncate text-sm font-medium text-stone-900"><%= @account.name %></p>
              <p class="truncate text-xs text-stone-500"><%= @account.email %></p>
            </div>
            <div class="py-1">
              <%= link_to "Settings", settings_path, class: "block px-4 py-2 text-sm text-stone-700 hover:bg-stone-100 focus:bg-stone-100 focus:text-stone-900 focus:outline-hidden" %>
              <a href="mailto:hello@vipreply.ai" class="block px-4 py-2 text-sm text-stone-700 hover:bg-stone-100 focus:bg-stone-100 focus:text-stone-900 focus:outline-hidden">Support</a>
            </div>
            <div class="py-1">
              <%= button_to logout_path, method: :delete, class: "block w-full text-left px-4 py-2 text-sm text-stone-700 hover:bg-stone-100 focus:bg-stone-100 focus:text-stone-900 focus:outline-hidden hover:cursor-pointer" do %>
                Sign out
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
