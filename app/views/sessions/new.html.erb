<% content_for :title, "Login | VIPReply" %>
<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-screen">
  <div class="mb-4 mr-1">
    <%= render partial: "marketing/logo" %>
  </div>
  <% if flash[:alert] %>
    <p class="bg-red-50 border border-red-200 text-red-700 text-center w-92 text-sm p-2 rounded-lg mb-4">
      <%= flash[:alert] %>
    </p>
  <% end %>
  <%= render partial: "shared/google_signin_button", locals: { prompt_consent: @prompt_consent, request_gmail_scopes: false } %>
</div>
