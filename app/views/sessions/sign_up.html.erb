<% content_for :title, "Connect Gmail | VIPReply" %>
<div class="min-h-screen">
  <div class="mx-auto md:px-4 pt-16">
    <div class="flex justify-center mb-8">
      <%= render partial: "marketing/logo" %>
    </div>
    <div class="max-w-lg mx-auto">
      <div class="bg-white rounded-lg shadow-md px-4 md:px-8 py-8">
        <h1 class="text-3xl font-bold mb-4 text-stone-900">Start your free trial.</h1>
        <p class="text-lg text-stone-600 mb-6">Sign in with the Google account your business uses to answer customer emails.</p>
        <div class="mb-3">
          <%= render partial: "shared/google_signin_button" %>
        </div>
        <p class="text-sm text-stone-500 text-center">
          By continuing, you acknowledge that you understand and agree<br/>
          to the
          <%= link_to "Terms and Conditions", terms_path, target: "_blank", class: "text-blue-500 hover:text-blue-600 underline" %>
          and
          <%= link_to "Privacy Policy.", privacy_path, target: "_blank", class: "text-blue-500 hover:text-blue-600 underline" %>
        </p>
      </div>
      <p class="text-sm text-stone-500 text-center my-4">
        Already have an account? <%= link_to "Sign in.", login_path, class: "text-blue-500 hover:text-blue-600 underline" %>
      </p>
    </div>
  </div>
</div>
