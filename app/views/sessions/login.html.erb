<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full rounded-lg sm:max-w-md xl:p-0">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
            <% flash.each do |key, message| %>
                <ul class="bg-red-50 text-red-800 p-3 rounded-lg border-red-200 border">
                    <li><%= message %></li>
                </ul>
            <% end %>
            <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
                Login to your account
            </h1>
            <%= form_with model: @account, url: login_path, class: "space-y-4 md:space-y-6" do |f| %>
                <div>
                    <%= f.label :username, class: "block mb-2 text-sm font-medium text-gray-900" %>
                    <%= f.text_field :username, class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5" %>
                </div>
                <div>
                    <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-900" %>
                    <%= f.password_field :password, class: "bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5" %>
                </div>
                <%= f.submit "Login", class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center cursor-pointer" %>
            <% end %>
        </div>
    </div>
</div>