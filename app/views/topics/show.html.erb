<div class="bg-gray-100 border-b border-gray-200 min-h-[41px] sticky top-0 z-10">
  <div class="container mx-auto px-3 py-2 flex align-center text-slate-500 divide-x divide-gray-300">
    <%= link_to root_path, class: "flex items-center bg-gray-50 border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 rounded-lg px-2 py-0.5 me-3" do %>
      <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18" />
      </svg>
      <p class="pl-2 font-medium">Inbox</p>
    <% end %>
    <div>
      <p class="text-lg text-slate-600 font-semibold ms-3"><%= @topic.subject %></p>
    </div>
  </div>
</div>
<div class="container mx-auto px-3">
  <div class="flex flex-wrap gap-8">
    <div class="w-full md:w-[calc(50%-1rem)] relative flex flex-col" id="template">
      <div class="sticky top-12">
        <div class="flex justify-between mt-4 mb-4">
          <%= link_to templates_path(regenerate_reply: true), class: "text-gray-600 bg-white border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2 inline-flex items-center gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
            </svg>
            View all templates
          <% end %>
          <%= link_to new_template_path(regenerate_reply: true, topic_id: @topic.id), data: { turbo_frame: "create_template_modal" }, class: "text-gray-600 bg-white border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-5 py-2 inline-flex items-center gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Create new template
          <% end %>
        </div>
        <% if @template %>
          <%= render "topics/template_form", input_errors: [], output_errors: [], topic_id: @topic.id %>
        <% else %>
          <p class="mb-2" id="template_form">TODO: Topic isn't connected to a template.</p>
        <% end %>
        <%= render "topics/generated_reply_form", generated_reply: @generated_reply, topic: @topic %>
      </div>
    </div>
    <div class="w-full md:w-[calc(50%-1rem)]" data-controller="iframe-resize">
      <ul class="divide-y divide-y-gray-300 mt-2 mb-10">
        <% @messages.each do |message| %>
          <li class="pt-4 pb-5" <%= "data-iframe-resize-target=lastMessage" if message == @messages.last %>>
            <div class="flex justify-between">
              <p class="text-slate-700 font-semibold truncate"><%= message.from %></p>
              <p class="text-slate-500 whitespace-nowrap ms-2">
                <% if message.date.to_date == Date.today %>
                  <%= message.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= message.date.strftime("%b %d") %>
                <% end %>
              </p>
            </div>
            <p class="text-slate-500 truncate"> to <%= message.to %></p>
            <div class="mt-2">
              <div class="text-center" data-iframe-resize-target="loader">
                <div role="status">
                  <svg class="animate-spin h-8 w-8 text-gray-400 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span class="sr-only">Loading...</span>
                </div>
              </div>
              <iframe
                srcdoc="<%= message.replace_cids_with_urls request.base_url %>"
                sandbox="allow-same-origin"
                class="w-full hidden  rounded bg-white"
                data-iframe-resize-target="iframe">
              </iframe>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= turbo_frame_tag "create_template_modal" %>
