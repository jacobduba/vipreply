<% content_for :title, @topic.subject %>
<div class="bg-gray-100 border-b border-gray-200 sticky top-0 z-10">
  <div class="container mx-auto px-3 flex justify-between h-[50px] items-center">
    <div class="flex text-slate-500 divide-x divide-gray-300 min-w-0">
      <%= link_to root_path,
                  class: "flex items-center bg-gray-50 border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 rounded-lg px-2 py-0.5 me-3",
                  data: (@from_inbox ? { controller: :navigation, action: "navigation#back" } : {}) do %>
        <svg class="w-4 h-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
        </svg>
        <p class="pl-2 font-medium">Inbox</p>
      <% end %>
      <div class="min-w-0 flex-shrink">
        <p class="text-lg text-slate-600 font-semibold ms-3 truncate"><%= @topic.subject %></p>
      </div>
    </div>
    <div class="hidden md:block">
      <%= render "shared/logout" %>
    </div>
  </div>
</div>
<div class="container mx-auto px-3">
  <div class="flex flex-wrap lg:gap-8">
    <!-- Left column: templates, new buttons, and forms -->
    <div class="w-full lg:w-[calc(50%-1rem)] relative flex flex-col order-2 lg:order-1" id="template">
      <div class="sticky top-[51px]"> <!-- Is 51px down b/c header is 51px tall -->
        <div data-controller="template-selector-dropdown" data-action="click@window->template-selector-dropdown#closeIfOutsideSelector" class="relative">
          <div class="flex justify-between lg:mt-3 mb-4">
            <%= render 'change_status_button' %>
            <% if @topic.awaiting_customer %>
              <div class="flex items-center text-sm text-blue-800 rounded-lg gap-1.5" role="alert">
                <svg class="flex-shrink-0 inline size-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
                <span class="sr-only">Info</span>
                <div>
                  <span class="font-medium">Awaiting customer reply.</span>
                </div>
              </div>
            <% end %>
            <% if @has_templates %>
              <%= link_to template_selector_dropdown_topic_path,
                  data: {
                    turbo_frame: "template-selector",
                    template_selector_dropdown_target: "button",
                    action: "click->template-selector-dropdown#toggle",
                    active: false
                  },
                  class: "text-gray-600 bg-white border border-gray-200 focus:outline-none hover:bg-gray-100 font-medium rounded-lg text-sm px-4 py-2 inline-flex items-center gap-2 data-[active=true]:bg-gray-100" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 16.875h3.375m0 0h3.375m-3.375 0V13.5m0 3.375v3.375M6 10.5h2.25a2.25 2.25 0 0 0 2.25-2.25V6a2.25 2.25 0 0 0-2.25-2.25H6A2.25 2.25 0 0 0 3.75 6v2.25A2.25 2.25 0 0 0 6 10.5Zm0 9.75h2.25A2.25 2.25 0 0 0 10.5 18v-2.25a2.25 2.25 0 0 0-2.25-2.25H6a2.25 2.25 0 0 0-2.25 2.25V18A2.25 2.25 0 0 0 6 20.25Zm9.75-9.75H18a2.25 2.25 0 0 0 2.25-2.25V6A2.25 2.25 0 0 0 18 3.75h-2.25A2.25 2.25 0 0 0 13.5 6v2.25a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>
                Select template
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
                  <path fill-rule="evenodd" d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                </svg>
              <% end %>
            <% else %>
              <%= link_to new_template_path(regenerate_reply: true, topic_id: @topic.id), data: { turbo_frame: "create_template_modal" }, class: "text-gray-600 bg-white border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-4 py-2 inline-flex items-center gap-2" do %>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Create new template
              <% end %>
            <% end %>
          </div>
          <%= turbo_frame_tag "template-selector", data: { template_selector_dropdown_target: "selector"} %>
          <%= render "topics/template_form", input_errors: [], output_errors: [], topic: @topic %>
          <%= render "topics/generated_reply_form", generated_reply: @generated_reply, topic: @topic %>
        </div>
      </div>
    </div>
    <!-- Right column: messages list -->
    <div class="w-full lg:w-[calc(50%-1rem)] order-1 lg:order-2" data-controller="iframe-resize">
      <ul class="divide-y divide-y-gray-300 lg:mb-10">
        <% @messages.each do |message| %>
          <li class="pt-3 pb-5" <%= "data-iframe-resize-target=lastMessage" if message == @messages.last %>>
            <div class="flex justify-between">
              <p class="text-slate-700 font-semibold truncate"><%= message.from %></p>
              <p class="text-slate-500 whitespace-nowrap ms-2">
                <% if message.date.to_date == Date.today %>
                  <%= message.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= message.date.strftime("%b %d") %>
                <% end %>
              </p>
            </div>
            <p class="text-slate-500 truncate mb-1"> to <%= message.to %></p>
            <% attachments_without_cid = message.attachments.select { |att| att.attachment? } %>
            <% if attachments_without_cid.any? %>
              <div class="flex flex-wrap gap-x-1">
                <% attachments_without_cid.each do |attachment| %>
                  <%= link_to attachment_path(attachment), target: "_blank", class: "mb-1 text-gray-600 bg-white border border-gray-200 focus:outline-none hover:bg-gray-100 focus:ring-2 focus:ring-gray-100 font-medium rounded-lg text-sm py-1 px-2 inline-flex items-center gap-1" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
                    </svg>
                    <%= attachment.filename %>
                  <% end %>
                <% end %>
              </div>
            <% end %>
            <div class="mt-1">
              <div class="text-center" data-iframe-resize-target="loader">
                <div role="status">
                  <svg class="animate-spin h-8 w-8 text-gray-400 inline" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  <span class="sr-only">Loading...</span>
                </div>
              </div>
              <iframe
                srcdoc="<%= message.replace_cids_with_urls request.base_url %>"
                sandbox="allow-same-origin"
                class="w-full hidden rounded bg-white"
                data-iframe-resize-target="iframe">
              </iframe>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
<%= turbo_frame_tag "create_template_modal" %>
