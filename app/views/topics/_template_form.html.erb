<% if topic.template_attached? %>
  <%= form_with model: [topic.template], id: "template_form" do |form| %>
    <div class="grid gap-4 mb-4 grid-cols-2" id="template_form_inputs">
      <% if false %>
        <div class="col-span-2">
          <%= form.label :input, "Template recieved email", class: ["block text-sm font-medium text-gray-900", (input_errors.empty? ? "mb-2" : "text-red-800")] %>
          <ul class="list-disc list-inside text-red-800 text-sm mb-2">
            <% input_errors.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
          <%# autocomplete: "off" disabled input form caching, yeah I know stupid %>
          <%= form.text_area :input, rows: 3, placeholder: "Write a template recieved email here", data: { controller: "textbox-autoresize" }, autocomplete: "off", class: "block p-4 w-full text-sm text-gray-900 bg-gray-100 rounded-lg border border-gray-200 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
        </div>
      <% end %>
      <div class="col-span-2">
        <%= form.label :output, "Template response email", class: ["block text-sm font-medium text-gray-900", (output_errors.empty? ? "mb-2" : "text-red-800")] %>
        <ul class="list-disc list-inside text-red-800 text-sm mb-2">
          <% output_errors.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
        <%= form.text_area :output, rows: 3, placeholder: "Write a template response email here", data: { controller: "textbox-autoresize" }, autocomplete: "off", class: "block p-4 w-full text-sm text-gray-900 bg-gray-100 rounded-lg border border-gray-200 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
      </div>
    </div>
    <%= form.hidden_field :regenerate_reply, value: true %>
    <%= form.hidden_field :topic_id, value: topic.id %>
    <div class="flex justify-start mt-4 mb-4">
      <button type="submit" class="text-white bg-slate-700 hover:bg-slate-800 focus:ring-4 focus:outline-none focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        Save template and regenerate reply
      </button>
    </div>
  <% end %>
<% else %>
  <div id="template_form">
    <div class="border-2 border-dashed border-gray-300 rounded-lg text-center p-3 mb-2 text-gray-500">
      <p>
        <% if topic.no_templates_exist_at_generation? %>
          No templates existed when response was generated.
        <% elsif topic.template_removed? %>
          Attached template was deleted.
        <% elsif topic.skipped_no_reply_needed? %>
          Auto-generation skipped because waiting for customer reply.
        <% end %>
      </p>
    </div>
    <div class="flex justify-start mt-4 mb-4">
      <%= button_to regenerate_reply_topic_path(topic), method: :get, class: "text-white bg-slate-700 hover:bg-slate-800 focus:ring-4 focus:outline-none focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        <% if topic.skipped_no_reply_needed? %>
          Generate reply
        <% else %>
          Regenerate reply
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
