<% if @templates_with_confidence.any? %>
  <%= form_with url: update_templates_regenerate_reply_topic_path(), id: "template_form" do |form| %>
    <%= form.label :email, "Smart templates", class: "block text-sm font-medium text-stone-600 mb-2" %>
    <div class="space-y-2">
      <% @templates_with_confidence.each_with_index do |template_with_confidence, i| %>
        <% template = template_with_confidence.template %>
        <div id="template-<%= i %>" class="border border-stone-200 bg-stone-100 rounded-lg focus-within:border-blue-500/90">
          <% #we need to do error checking on EACH template %>
          <% if output_errors.any? %>
            <ul class="list-disc list-inside text-red-800 text-sm mb-2">
              <% output_errors.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <%= form.label "templates[#{template.id}][output]", class: "w-full flex justify-between items-center px-4 py-2.5 cursor-text" do %>
            <div class="flex items-center justify-center gap-1.5 text-stone-500">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-3">
                <path fill-rule="evenodd" d="M5 4a.75.75 0 0 1 .738.616l.252 1.388A1.25 1.25 0 0 0 6.996 7.01l1.388.252a.75.75 0 0 1 0 1.476l-1.388.252A1.25 1.25 0 0 0 5.99 9.996l-.252 1.388a.75.75 0 0 1-1.476 0L4.01 9.996A1.25 1.25 0 0 0 3.004 8.99l-1.388-.252a.75.75 0 0 1 0-1.476l1.388-.252A1.25 1.25 0 0 0 4.01 6.004l.252-1.388A.75.75 0 0 1 5 4ZM12 1a.75.75 0 0 1 .721.544l.195.682c.118.415.443.74.858.858l.682.195a.75.75 0 0 1 0 1.442l-.682.195a1.25 1.25 0 0 0-.858.858l-.195.682a.75.75 0 0 1-1.442 0l-.195-.682a1.25 1.25 0 0 0-.858-.858l-.682-.195a.75.75 0 0 1 0-1.442l.682-.195a1.25 1.25 0 0 0 .858-.858l.195-.682A.75.75 0 0 1 12 1ZM10 11a.75.75 0 0 1 .728.568.968.968 0 0 0 .704.704.75.75 0 0 1 0 1.456.968.968 0 0 0-.704.704.75.75 0 0 1-1.456 0 .968.968 0 0 0-.704-.704.75.75 0 0 1 0-1.456.968.968 0 0 0 .704-.704A.75.75 0 0 1 10 11Z" clip-rule="evenodd" />
              </svg>
              <span class="font-bold text-xs">
                <%= confidence_percentage(template_with_confidence.confidence_score) %>% CONFIDENT
              </span>
            </div>
            <%= link_to remove_template_topic_path(topic, template),
              data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to remove this smart template?"
              },
              class: "text-stone-400 hover:text-stone-600" do %>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="size-4">
                <path d="M5.28 4.22a.75.75 0 0 0-1.06 1.06L6.94 8l-2.72 2.72a.75.75 0 1 0 1.06 1.06L8 9.06l2.72 2.72a.75.75 0 1 0 1.06-1.06L9.06 8l2.72-2.72a.75.75 0 0 0-1.06-1.06L8 6.94 5.28 4.22Z" />
              </svg>
            <% end %>
          <% end %>
          <%= form.text_area "templates[#{template.id}][output]",
              value: template.output,
              rows: 1,
              placeholder: "Write a smart template you can reuse for similar emails...",
              data: { controller: "textbox-autoresize" },
              autocomplete: "off",
              class: "block px-4 pb-2.5 w-full text-sm text-stone-900 bg-transparent focus:outline-none resize-none" %>
        </div>
      <% end %>
    </div>
    <div class="flex justify-start my-4">
      <button type="submit" class="text-white bg-slate-700 hover:bg-slate-800 focus:ring-4 focus:outline-none focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center gap-2 hover:cursor-pointer">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        Save templates & regenerate reply
      </button>
    </div>
  <% end %>
<% else %>
  <div id="template_form">
    <div class="border-2 border-dashed border-stone-300 rounded-lg flex justify-center gap-2 items-center p-3 mb-2 text-stone-500">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 8.25V6a2.25 2.25 0 0 0-2.25-2.25H6A2.25 2.25 0 0 0 3.75 6v8.25A2.25 2.25 0 0 0 6 16.5h2.25m8.25-8.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-7.5A2.25 2.25 0 0 1 8.25 18v-1.5m8.25-8.25h-6a2.25 2.25 0 0 0-2.25 2.25v6" />
      </svg>
      <p>No smart templates are selected.</p>
    </div>
    <div class="flex justify-start mt-4 mb-4">
      <%= button_to update_templates_regenerate_reply_topic_path(topic), class: "text-white bg-slate-700 hover:bg-stone-800 focus:ring-4 focus:outline-none focus:ring-stone-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center gap-2 hover:cursor-pointer" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99" />
        </svg>
        <% if topic.generated_reply.empty? %>
          Generate reply
        <% else %>
          Regenerate reply
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
