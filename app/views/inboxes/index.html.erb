<div class="container mx-auto px-3">
  <nav>
    <div class="flex flex-wrap items-center justify-between mx-auto py-4">
      <span class="self-center text-xl font-semibold whitespace-nowrap text-slate-600">VipReply.ai</span>
      <%= link_to logout_path, data: { turbo_method: :delete }, class: "flex items-center gap-x-1.5 group/logout " do %>
        <span class="text-slate-500 group-hover/logout:text-red-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
          </svg>
        </span>
        <span class="text-slate-600 group-hover/logout:text-red-500">
          Logout of <%= @account.name %>
        </span>
      <% end %>
    </div>
    <div class="border-b border-slate-300">
      <ul class="flex flex-wrap -mb-px gap-4 font-medium text-center text-slate-500">
        <li class="me-2">
          <a href="#" class="inline-flex items-center gap-1 justify-center pb-4 text-blue-600 border-b-2 border-blue-600 rounded-t-lg active">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 13.5h3.86a2.25 2.25 0 0 1 2.012 1.244l.256.512a2.25 2.25 0 0 0 2.013 1.244h3.218a2.25 2.25 0 0 0 2.013-1.244l.256-.512a2.25 2.25 0 0 1 2.013-1.244h3.859m-19.5.338V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18v-4.162c0-.224-.034-.447-.1-.661L19.24 5.338a2.25 2.25 0 0 0-2.15-1.588H6.911a2.25 2.25 0 0 0-2.15 1.588L2.35 13.177a2.25 2.25 0 0 0-.1.661Z" />
            </svg>
            Inbox
          </a>
        </li>
        <li class="me-2">
          <a href="#" class="inline-flex items-center gap-1 justify-centerp pb-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-slate-300">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
            </svg>
            Templates
          </a>
        </li>
      </ul>
    </div>
  </nav>
  <% if @inbox %>
    <h1 class="text-2xl font-bold text-slate-700 mt-10 mb-1">Awaiting Reply</h1>
    <ul class="divide-y divide-slate-300">
      <% @to_do_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-slate-800 text-lg group-hover/model:text-blue-500 underline"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-slate-500 text-lg group-hover/model:text-blue-500">(<%= topic.message_count %>)</p>
                <% end %>
              </div>
              <span class="text-slate-400 flex items-center whitespace-nowrap group-hover/model:text-blue-500">
                <% if topic.date.to_date == Date.today %>
                  <%= topic.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.date.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-slate-500 group-hover/model:text-blue-500 truncate">
                <%= topic.from == @account.email ? "Me → #{topic.to}" : topic.from %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
    <h1 class="text-2xl font-bold text-slate-500 mt-6 mb-1">Replied To</h1>
    <ul class="divide-y divide-slate-300">
      <% @done_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-slate-500 text-lg group-hover/model:text-blue-400"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-slate-400 text-lg group-hover/model:text-blue-400">(<%= topic.message_count %>)</p>
                <% end %>
              </div>
              <span class="text-slate-400 flex items-center whitespace-nowrap group-hover/model:text-blue-400">
                <% if topic.date.to_date == Date.today %>
                  <%= topic.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.date.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-slate-400 group-hover/model:text-blue-400 truncate">
                <%= topic.from == @account.email ? "Me → #{topic.to}" : topic.from  %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    <% else %>
      <p>You don't have an inbox connected.</p>
    <% end %>
  </div>
