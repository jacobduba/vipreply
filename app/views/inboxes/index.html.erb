<% content_for :title, "Inbox" %>
<%= render 'shared/tabs', selected_page: "inbox" %>
<div class="container mx-auto px-3">
  <% if @needs_reply_topics.empty? %>
    <div class="flex justify-center items-center flex-col my-36">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-yellow-500/80">
        <path fill-rule="evenodd" d="M9 4.5a.75.75 0 0 1 .721.544l.813 2.846a3.75 3.75 0 0 0 2.576 2.576l2.846.813a.75.75 0 0 1 0 1.442l-2.846.813a3.75 3.75 0 0 0-2.576 2.576l-.813 2.846a.75.75 0 0 1-1.442 0l-.813-2.846a3.75 3.75 0 0 0-2.576-2.576l-2.846-.813a.75.75 0 0 1 0-1.442l2.846-.813A3.75 3.75 0 0 0 7.466 7.89l.813-2.846A.75.75 0 0 1 9 4.5ZM18 1.5a.75.75 0 0 1 .728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 0 1 0 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 0 1-1.456 0l-.258-1.036a2.625 2.625 0 0 0-1.91-1.91l-1.036-.258a.75.75 0 0 1 0-1.456l1.036-.258a2.625 2.625 0 0 0 1.91-1.91l.258-1.036A.75.75 0 0 1 18 1.5ZM16.5 15a.75.75 0 0 1 .712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 0 1 0 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 0 1-1.422 0l-.395-1.183a1.5 1.5 0 0 0-.948-.948l-1.183-.395a.75.75 0 0 1 0-1.422l1.183-.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0 1 16.5 15Z" clip-rule="evenodd" />
      </svg>
      <p class="text-gray-700">All customers have a reply!</p>
    </div>
  <% else %>
    <h1 class="font-bold text-slate-400 text-sm mt-6 uppercase">Needs a reply</h1>
    <ul class="divide-y divide-slate-300">
      <% @needs_reply_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-slate-800 text-lg group-hover/model:text-blue-500"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-slate-500 text-lg group-hover/model:text-blue-500">(<%= topic.message_count %>)</p>
                <% end %>
              </div>
              <span class="text-slate-500 flex items-center whitespace-nowrap group-hover/model:text-blue-500">
                <% if topic.date.to_date == Date.today %>
                  <%= topic.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.date.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-slate-500 group-hover/model:text-blue-500 truncate">
                <%= topic.from == @account.email ? "Me → #{topic.to}" : topic.from %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
  <% unless @has_reply_topics.empty? %>
    <h1 class="font-bold text-slate-400 text-sm mt-4 uppercase">Has a reply</h1>
    <ul class="divide-y divide-slate-300">
      <% @has_reply_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-slate-500 text-lg group-hover/model:text-blue-500"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-slate-500 text-lg group-hover/model:text-blue-500">(<%= topic.message_count %>)</p>
                <% end %>
              </div>
              <span class="text-slate-400 flex items-center whitespace-nowrap group-hover/model:text-blue-500">
                <% if topic.date.to_date == Date.today %>
                  <%= topic.date.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.date.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-slate-400 group-hover/model:text-blue-500 truncate">
                <%= topic.from == @account.email ? "Me → #{topic.to}" : topic.from  %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
