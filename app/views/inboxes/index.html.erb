<% content_for :title, "Inbox" %>
<%= render 'shared/tabs', selected_page: "inbox" %>
<div class="container mx-auto px-3">
  <div class="flex items-center justify-between py-4">
    <div class="flex items-center space-x-4">
      <div class="font-medium text-sm">Filter by:</div>
      <%= form_tag(root_path, method: :get, class: "flex space-x-4") do %>
        <label class="inline-flex items-center">
          <%= check_box_tag 'providers[]', 'google_oauth2', 
              @selected_providers.include?('google_oauth2'), 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", 
              onchange: "this.form.submit();" %>
          <span class="ml-2 text-sm text-gray-700">Gmail</span>
        </label>
        <label class="inline-flex items-center">
          <%= check_box_tag 'providers[]', 'microsoft_office365', 
              @selected_providers.include?('microsoft_office365'), 
              class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded", 
              onchange: "this.form.submit();" %>
          <span class="ml-2 text-sm text-gray-700">Outlook</span>
        </label>
      <% end %>
    </div>
    
    <div class="flex space-x-4">
      <% unless @connected_providers.include?("google_oauth2") %>
        <%= form_tag("/auth/google_oauth2", method: :post, class: "inline", data: { turbo: false }) do %>
          <button type="submit" class="text-white bg-[#4285F4] hover:bg-[#4285F4]/90 focus:ring-4 focus:outline-none focus:ring-[#4285F4]/50 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center">
            <svg class="w-3 h-3 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
              <path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
            </svg>
            Connect Gmail
          </button>
        <% end %>
      <% end %>
      
      <% unless @connected_providers.include?("microsoft_office365") %>
        <%= link_to "/auth/microsoft_office365", class: "text-white bg-[#0078D4] hover:bg-[#0078D4]/90 focus:ring-4 focus:outline-none focus:ring-[#0078D4]/50 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center", data: { turbo: false } do %>
          <svg class="w-3 h-3 me-2" fill="white" viewBox="0 0 24 24">
            <path d="M11.5 3v8.5H3V3h8.5zm0 18H3v-8.5h8.5V21zm1-18H21v8.5h-8.5V3zm8.5 9.5V21h-8.5v-8.5H21z"/>
          </svg>
          Connect Outlook
        <% end %>
      <% end %>
    </div>
  </div>

  <% if @needs_reply_topics.empty? && @has_reply_topics.empty? %>
    <% if @account.inboxes.empty? %>
      <div class="mt-6 p-4 bg-white rounded shadow">
        <p class="text-center mb-4">You don't have any connected email accounts.</p>
        <div class="flex flex-col space-y-4 items-center">
          <%= form_tag("/auth/google_oauth2", method: :post, data: { turbo: false }) do %>
            <button type="submit" class="text-white bg-[#4285F4] hover:bg-[#4285F4]/90 focus:ring-4 focus:outline-none focus:ring-[#4285F4]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center w-60">
              <svg class="w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 19">
                <path fill-rule="evenodd" d="M8.842 18.083a8.8 8.8 0 0 1-8.65-8.948 8.841 8.841 0 0 1 8.8-8.652h.153a8.464 8.464 0 0 1 5.7 2.257l-2.193 2.038A5.27 5.27 0 0 0 9.09 3.4a5.882 5.882 0 0 0-.2 11.76h.124a5.091 5.091 0 0 0 5.248-4.057L14.3 11H9V8h8.34c.066.543.095 1.09.088 1.636-.086 5.053-3.463 8.449-8.4 8.449l-.186-.002Z" clip-rule="evenodd"/>
              </svg>
              Connect Gmail
            </button>
          <% end %>
          
          <%= form_tag("/auth/microsoft_office365", method: :post, data: { turbo: false }) do %>
            <button type="submit" class="text-white bg-[#0078D4] hover:bg-[#0078D4]/90 focus:ring-4 focus:outline-none focus:ring-[#0078D4]/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center w-60">
              <svg class="w-4 h-4 me-2" fill="white" viewBox="0 0 24 24">
                <path d="M11.5 3v8.5H3V3h8.5zm0 18H3v-8.5h8.5V21zm1-18H21v8.5h-8.5V3zm8.5 9.5V21h-8.5v-8.5H21z"/>
              </svg>
              Connect Outlook
            </button>
          <% end %>
        </div>
      </div>
    <% elsif @selected_providers.any? && (@selected_providers - @connected_providers).any? && @inboxes.empty? %>
      <div class="mt-6 p-4 bg-white rounded shadow">
        <p class="text-center">No emails found with your current filter settings. You are not connected to all selected providers.</p>
      </div>
    <% elsif @inboxes.empty? && @selected_providers.any? %>
       <div class="mt-6 p-4 bg-white rounded shadow">
        <p class="text-center">No inboxes found for the selected providers. Please connect an account or adjust your filters.</p>
      </div>
    <% end %>
  <% end %>

  <% if @needs_reply_topics.empty? && @inboxes.present? && !(@selected_providers.any? && (@selected_providers - @connected_providers).any? && @inboxes.empty?) %>
    <div class="flex justify-center items-center flex-col my-36">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 text-yellow-500/80">
        <path fill-rule="evenodd" d="M9 4.5a.75.75 0 0 1 .721.544l.813 2.846a3.75 3.75 0 0 0 2.576 2.576l2.846.813a.75.75 0 0 1 0 1.442l-2.846.813a3.75 3.75 0 0 0-2.576 2.576l-.813 2.846a.75.75 0 0 1-1.442 0l-.813-2.846a3.75 3.75 0 0 0-2.576-2.576l-2.846-.813a.75.75 0 0 1 0-1.442l2.846.813A3.75 3.75 0 0 0 7.466 7.89l.813-2.846A.75.75 0 0 1 9 4.5ZM18 1.5a.75.75 0 0 1 .728.568l.258 1.036c.236.94.97 1.674 1.91 1.91l1.036.258a.75.75 0 0 1 0 1.456l-1.036.258c-.94.236-1.674.97-1.91 1.91l-.258 1.036a.75.75 0 0 1-1.456 0l-.258-1.036a2.625 2.625 0 0 0-1.91-1.91l-1.036-.258a.75.75 0 0 1 0-1.456l1.036-.258a2.625 2.625 0 0 0 1.91-1.91l.258-1.036A.75.75 0 0 1 18 1.5ZM16.5 15a.75.75 0 0 1 .712.513l.394 1.183c.15.447.5.799.948.948l1.183.395a.75.75 0 0 1 0 1.422l-1.183.395c-.447.15-.799.5-.948.948l-.395 1.183a.75.75 0 0 1-1.422 0l-.395-1.183a1.5 1.5 0 0 0-.948-.948l-1.183-.395a.75.75 0 0 1 0-1.422l1.183.395c.447-.15.799-.5.948-.948l.395-1.183A.75.75 0 0 1 16.5 15Z" clip-rule="evenodd" />
      </svg>
      <p class="text-stone-700">All customers have a reply!</p>
    </div>
  <% elsif @needs_reply_topics.present? %>
    <h1 class="font-bold text-stone-400 text-sm mt-6 uppercase">Needs a reply</h1>
    <ul class="divide-y divide-stone-300">
      <% @needs_reply_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-stone-800 text-lg group-hover/model:text-blue-500"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-stone-500 text-lg group-hover/model:text-blue-500">(<%= topic.message_count %>)</p>
                <% end %>
                <% if @inboxes.count > 1 %>
                  <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded ml-2">
                    <%= topic.inbox.provider == "google_oauth2" ? "Gmail" : "Outlook" %>
                  </span>
                <% end %>
              </div>
              <span class="text-stone-500 flex items-center whitespace-nowrap group-hover/model:text-blue-500">
                <% if topic.last_message.to_date == Date.today %>
                  <%= topic.last_message.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.last_message.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-stone-500 group-hover/model:text-blue-500 truncate">
                <%= topic.from_email == @account.email ? "Me → #{topic.to_email}" : topic.from %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if @has_reply_topics.present? %>
    <h1 class="font-bold text-stone-400 text-sm mt-4 uppercase">Has a reply</h1>
    <ul class="divide-y divide-stone-300">
      <% @has_reply_topics.each do |topic| %>
        <li class="py-2">
          <%= link_to topic_path(topic), class: "group/model" do %>
            <div class="flex justify-between items-center gap-3">
              <div class="flex items-center gap-1">
                <p class="text-stone-500 text-lg group-hover/model:text-blue-500"><%= topic.subject %></p>
                <% if topic.message_count > 1 %>
                  <p class="text-stone-500 text-lg group-hover/model:text-blue-500">(<%= topic.message_count %>)</p>
                <% end %>
                <% if @inboxes.count > 1 %>
                  <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded ml-2">
                    <%= topic.inbox.provider == "google_oauth2" ? "Gmail" : "Outlook" %>
                  </span>
                <% end %>
              </div>
              <span class="text-stone-400 flex items-center whitespace-nowrap group-hover/model:text-blue-500">
                <% if topic.last_message.to_date == Date.today %>
                  <%= topic.last_message.strftime("%l:%M %p") %>
                <% else %>
                  <%= topic.last_message.strftime("%b %d") %>
                <% end %>
              </span>
            </div>
            <div class="truncate">
              <p class="text-stone-400 group-hover/model:text-blue-500 truncate">
                <%= topic.from_email == @account.email ? "Me → #{topic.to_email}" : topic.from  %> — <%= topic.snippet.html_safe %>
              </p>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>