<%= turbo_frame_tag "search-results" do %>
    <%= render 'search'%>

    <% unless @neighbor %>
        <h2>No results found</h2>
    <% else %>
        <div class="rounded-lg bg-slate-50 p-8 border border-gray-300" data-controller="clipboard">
            <h3 class="font-semibold text-slate-700 text-sm mb-2">Email</h3>
            <p class="text-slate-950"><%= simple_format(@neighbor.input) %></p>
            <div class="border-t my-4"></div>
            <h3 class="font-semibold text-slate-700 text-sm mb-2">Response</h3>
            <p class="text-slate-950" data-clipboard-target="source" data-text-to-copy="<%=@neighbor.output%>"><%= simple_format(@neighbor.output) %></p>

            <button type="button" data-action="clipboard#copy" class="inline-flex text-gray-900 items-center bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-3 py-1.5 me-2 mt-2">
                <span class="mr-2">Copy to clipboard</span> 
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 0 0 2.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 0 0-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 0 0 .75-.75 2.25 2.25 0 0 0-.1-.664m-5.8 0A2.251 2.251 0 0 1 13.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25ZM6.75 12h.008v.008H6.75V12Zm0 3h.008v.008H6.75V15Zm0 3h.008v.008H6.75V18Z" />
                </svg>
            </button>
        </div>
    <% end %>
<% end %>