<%= turbo_frame_tag "create_example_modal" do %>
  <div data-controller="turbo-modal" data-action="turbo:submit-end->turbo-modal#submitEnd" class="fixed inset-0 flex items-center justify-center bg-gray-500 bg-opacity-50">
    <div class="relative p-4 w-full max-w-lg max-h-full">
      <!-- Modal content -->
      <div class="relative bg-white rounded-lg shadow">
        <!-- Modal header -->
        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
          <h3 class="text-lg font-semibold text-gray-900">
            Create new example
          </h3>
          <button type="button" data-action="turbo-modal#hideModal" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-toggle="crud-modal">
            <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
            </svg>
            <span class="sr-only">Close modal</span>
          </button>
        </div>
        <!-- Modal body -->
        <%= form_with model: [@model, @example], class:"p-4 md:p-5" do  |form| %>
          <div class="grid gap-4 mb-4 grid-cols-2">
            <div class="col-span-2">
              <%= form.label :input, "Example email", class: "block mb-2 text-sm font-medium text-gray-900" %>
              <% @example.errors.full_messages_for(:input).each do |message| %>
                <div><%= message %></div>
              <% end %>
              <%= form.text_area :input, rows: 6, placeholder: "Write your example email here", class: "block p-4 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
            <div class="col-span-2">
              <%= form.label :output, "Example response", class: "block mb-2 text-sm font-medium text-gray-900" %>
              <% @example.errors.full_messages_for(:output).each do |message| %>
                <div><%= message %></div>
              <% end %>
              <%= form.text_area :output, rows: 6, placeholder: "Write your example response here", class: "block p-4 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600">
            <svg class="me-1 -ms-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
            Create example
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>