<%= turbo_frame_tag "examples_list" do %>
  <div class="flex justify-between">
    <h1 class="text-2xl font-semibold text-slate-800">
      <% if response %>
        Examples used for response
      <% else %>
        Training data for model
      <% end %>
    </h1>
    <div class="flex gap-2">
      <% if response %>
        <%= link_to new_model_example_path(@model), data: { turbo_frame: "create_example_modal" }, class: "text-gray-900 bg-gray-50 border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-full text-sm px-5 py-1.5 me-2 inline-flex items-center gap-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
          </svg>
          View all templates
        <% end %>
      <% end %>
      <%= link_to new_model_example_path(@model), data: { turbo_frame: "create_example_modal" }, class: "text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-1.5 me-2 inline-flex items-center gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
        </svg>
        Create new template
      <% end %>
    </div>
  </div>
  <div class="relative overflow-x-auto mt-3">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500">
      <thead class="text-xs text-gray-700 uppercase border-b">
        <tr>
          <th scope="col" class="py-3 pr-3 w-1/2">
            Example received email
          </th>
          <th scope="col" class="py-3 px-6 w-1/2">
            Example response email
          </th>
          <th scope="col" class="py-3 pl-3 "></th>
        </tr>
      </thead>
      <tbody id="examples_collection" class="divide-y">
        <%= render partial: 'nexample', collection: examples, as: :example %>
      </tbody>
    </table>
  </div>
  <%= turbo_frame_tag "create_example_modal" %>
  <%= turbo_frame_tag "edit_example_modal" %>
<% end %>