<div class="container mx-auto pt-16 px-3">
  <%= render partial: "shared/back", locals: { path: root_path, text: "Models" } %>
  <div class="flex justify-between mb-4">
    <h1 class="text-4xl font-bold text-slate-800"><%= @model.name %></h1>
    <%= link_to model_examples_path(@model), class: "text-gray-900 bg-gray-50 border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-full text-sm px-5 py-2.5 me-2 inline-flex items-center gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
      </svg>
      Edit templates
    <% end %>
  </div>
  <div class="flex flex-wrap gap-8">
    <div class="w-full md:w-[calc(50%-1rem)]">
      <%= form_with url: model_generate_response_path(@model), method: :post do |form| %>
        <%= form.text_area :query, placeholder: "Paste email you want to generate a response for...", required: true, value: @email, data: { regenerate_target: "generateQueryField" }, id: "query_field", class: "block p-4 h-40 w-full text-sm text-slate-900 bg-slate-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
        <%= form.submit "Generate response", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg px-5 py-2.5 mt-4 mb-4 cursor-pointer" %>
      <% end %>
      <%= render 'generated_response' %>
    </div>
    <div class="w-full md:w-[calc(50%-1rem)]">
      <% if @response %>
        <h1 class="text-2xl font-semibold text-slate-800">
          Referenced template
        </h1>
        <p class="text-slate-700 mb-5">
          The generated response used this template to provided guidance and structure.
        </p>
        <% if @template %>
          <%= render "referenced_template_form" %>
        <% else %>
          <p class="text-slate-700 mb-5">
            Model doesn't have any templates...
            Add some!
          </p>
        <% end %>
      <% else %>
        <h1 class="text-2xl font-semibold text-slate-800">
          It's quiet here
        </h1>
        <p class="text-slate-700 mb-5">
          Enter a received email, and we'll generate a response for you.
          As you do, this space will be filled with the template that guided the response.
        </p>
        <img src="/images/undraw_empty_street_re_atjq.svg" alt="rss feed" />
      <% end %>
    </div>
  </div>
</div>
<%= turbo_frame_tag "create_example_modal" %>
