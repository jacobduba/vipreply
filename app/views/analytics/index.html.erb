<% content_for :title, "Analytics" %>
<section class="py-8">
  <div class="mx-auto max-w-7xl px-4">
    <h1 class="text-3xl font-bold mb-6 text-stone-800">Analytics Dashboard</h1>
    <div class="bg-white rounded-lg shadow-sm border border-stone-200 overflow-hidden">
      <table class="min-w-full divide-y divide-stone-200">
        <thead class="bg-stone-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Registration Date</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Last Active Time</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-stone-500 uppercase tracking-wider">Session Count</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-stone-200">
          <% @accounts.each do |account| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-stone-900">
                <%= account.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-500">
                <%= account.email %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-500">
                <%= account.created_at.strftime("%m/%d/%Y") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-500">
                <%= "#{time_ago_in_words(account.last_active_at)} ago" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-stone-500">
                <%= account.session_count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <% if @accounts.empty? %>
        <div class="px-6 py-12 text-center">
          <p class="text-stone-500">No accounts found.</p>
        </div>
      <% end %>
    </div>
  </div>
</section>
