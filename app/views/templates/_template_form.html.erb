<%= form_with model: template do |form| %>
  <div class="grid gap-4 mb-4 grid-cols-2" id="template_form_inputs">
    <div class="col-span-2">
      <%= form.label :output, "Template response email", class: ["block text-sm font-medium text-gray-900", (output_errors.empty? ? "mb-2" : "text-red-800")] %>
      <ul class="list-disc list-inside text-red-800 text-sm mb-2">
        <% output_errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <%= form.text_area :output, rows: 6, placeholder: "Write a template response email here", class: "block p-4 w-full text-sm text-gray-900 bg-gray-100 rounded-lg border border-gray-200 focus:ring-blue-500 focus:border-blue-500 resize-none" %>
    </div>

    <div class="col-span-2">
      <% if local_assigns[:existing_examples] %>
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-900 mb-2">Existing Examples</label>
          <% existing_examples.each do |example| %>
            <% if example.source.present? %>
              <div class="mb-2 p-2 bg-gray-50 rounded relative group">
                <%= simple_format example.source.body %>
                <%= link_to example_path(example), 
                          method: :delete,
                          class: "absolute top-1 right-1 opacity-0 group-hover:opacity-100 text-red-500 hover:text-red-700" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                  </svg>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= form.label :example_message, "Add New Example", class: "block text-sm font-medium text-gray-900 mb-2" %>
        <%= form.text_area :example_message, rows: 2, class: "block p-2 w-full text-sm text-gray-900 bg-gray-100 rounded-lg border border-gray-200 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>

  <%= form.hidden_field :regenerate_reply, value: @regenerate_reply %>
  <% if @regenerate_reply %>
    <%= form.hidden_field :topic_id, value: @topic_id %>
  <% end %>

  <div class="flex gap-2">
    <button type="submit" class="text-white inline-flex items-center bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
      Save template
    </button>
    <% if show_delete %>
      <%= link_to template_path(template), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to delete this template?",
      },
      class: "flex justify-center text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" do %>
        Delete template
      <% end %>
    <% end %>
  </div>
<% end %>