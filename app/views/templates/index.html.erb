<div class="container mx-auto px-3">
  <nav class="mb-6">
    <div class="flex flex-wrap items-center justify-between mx-auto py-4">
      <span class="self-center text-xl font-semibold whitespace-nowrap text-slate-600">VipReply.ai</span>
      <%= link_to logout_path, data: { turbo_method: :delete }, class: "flex items-center gap-x-1.5 group/logout " do %>
        <span class="text-slate-500 group-hover/logout:text-red-400">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0 0 13.5 3h-6a2.25 2.25 0 0 0-2.25 2.25v13.5A2.25 2.25 0 0 0 7.5 21h6a2.25 2.25 0 0 0 2.25-2.25V15m3 0 3-3m0 0-3-3m3 3H9" />
          </svg>
        </span>
        <span class="text-slate-600 group-hover/logout:text-red-500">
          Logout of <%= @account.name %>
        </span>
      <% end %>
    </div>
  </nav>
  <%= render partial: "shared/back", locals: { path: root_path, text: "Inbox" } %>
  <div class="flex justify-between mb-8">
    <h1 class="text-4xl font-bold text-slate-800">Templates</h1>
    <%= link_to new_template_path, data: { turbo_frame: "create_template_modal" }, class: "text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 me-2 inline-flex items-center gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Create new template
    <% end %>
  </div>
  <div class="relative overflow-x-auto sm:rounded-lg border mb-4">
    <table class="w-full text-sm text-left rtl:text-right text-gray-500">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 border-b">
        <tr>
          <th scope="col" class="px-6 py-3 w-1/2">
            Template recieved email
          </th>
          <th scope="col" class="px-6 py-3 w-1/2">
            Template response email
          </th>
          <th scope="col" class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody id="templates_collection">
        <%= render @templates %>
      </table>
    </div>
  </div>
</div>
<%= turbo_frame_tag "create_template_modal" %>
<%= turbo_frame_tag "edit_template_modal" %>