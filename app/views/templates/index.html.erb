<% content_for :title, "Templates | VIPReply" %>
<%= render 'shared/tabs', selected_page: "templates" %>
<div class="container mx-auto px-3">
  <div class="flex justify-end my-3">
    <%= link_to new_template_path, data: { turbo_frame: "create_template_modal" }, class: "text-white bg-green-700 hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300 font-medium rounded-full text-sm px-5 py-2.5 inline-flex items-center gap-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
      </svg>
      Create new template
    <% end %>
  </div>
  <div class="relative overflow-x-auto sm:rounded-lg border mb-4">
    <table class="w-full text-sm text-left rtl:text-right text-stone-500">
      <thead class="text-xs text-stone-700 uppercase bg-stone-50 border-b">
        <tr>
          <th scope="col" class="px-6 py-3">
            Template Response
          </th>
          <th scope="col" class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody id="templates_collection">
        <%= render partial: 'template', collection: @templates %>
      </tbody>
    </table>
  </div>
</div>
<%= turbo_frame_tag "create_template_modal" %>
<%= turbo_frame_tag "edit_template_modal" %>
