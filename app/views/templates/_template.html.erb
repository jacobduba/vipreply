<tr id="<%= "template-#{template.id}" %>" class="odd:bg-white even:bg-gray-50 border-b">
  <td class="px-6 py-4 text-gray-700">
    <%= simple_format template.input %>
  </td>
  <td class="px-6 py-4 text-gray-700">
    <%= simple_format template.output %>
  </td>
  <td class="px-6 py-4 text-right">
    <%= link_to "Edit", edit_template_path(template), data: { turbo_frame: "edit_template_modal" }, class: "font-medium text-blue-600 hover:underline" %>
  </td>
</tr>
