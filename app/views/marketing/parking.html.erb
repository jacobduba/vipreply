<% header = "Reply to customer emails, in a few clicks." %>
<% content_for :title, "VIPReply | #{header}" %>
<%= render 'marketing/marketing_header' %>
<section class="pt-46 px-4 flex justify-center mx-auto">
  <div>
    <div class="flex justify-center mb-4">
      <span class="bg-white text-stone-500 border border-stone-200 text-sm font-medium px-4 py-2 rounded-full">
        Built for parking lots
      </span>
    </div>
    <h1 class="text-3xl md:text-5xl text-center font-extrabold mb-6 text-stone-800 max-w-2.5xl">
      <%= header %>
    </h1>
    <div class="flex justify-center">
      <div>
        <p class="text-2xl text-center text-stone-700 mb-6">
          VIPReply lets you delight customers in half the time.
        </p>
      </div>
    </div>
    <div class="flex gap-4 justify-center">
      <%= link_to "Try for free", login_path,
          class: "text-white bg-blue-600 hover:bg-blue-700 shadow-lg font-medium rounded-full text-base px-12 py-3 text-center justify-center inline-flex items-center hover:cursor-pointer" %>
      <%= link_to "Watch demo", "https://assets.vipreply.ai/demo_smaller.mp4", target: "_blank",
          class: "text-stone-700 border shadow-lg border-stone-300 bg-white hover:bg-stone-100 font-medium rounded-full text-base px-8 py-3 text-center justify-center inline-flex items-center gap-2 hover:cursor-pointer" %>
    </div>
  </section>
  <section class="pb-8 pt-32">
    <div class="mx-auto max-w-7xl px-4">
      <h3 class="text-lg sm:text-xl/7 font-semibold text-blue-700">How it works</h3>
      <h2 class="text-3xl sm:text-5xl font-bold mb-6 text-stone-700">Reply in three clicks</h2>
      <video
          class="w-full rounded-lg border border-stone-200 shadow-lg"
          autoplay
          loop
          muted
          playsinline
          controls
          preload="metadata"
          poster="">
        <source src="https://assets.vipreply.ai/three-click-reply-optimized.mp4" type="video/mp4">
        Your browser does not support the video tag.
      </video>
    </div>
  </section>
  <section class="py-8">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="p-8 pb-0 bg-white/80 rounded-lg shadow-sm relative overflow-hidden">
