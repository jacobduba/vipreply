              <dd class="inline text-gray-600">the right training template for you when VIPReply is confident.</dd>
            </div>
          </dl>
        </div>
        <div class="lg:col-span-2">
          <%= image_tag "product_demo.png", class: "w-full rounded-lg border border-stone-200 shadow-lg", alt: "VIPReply product demo" %>
        </div>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="mx-auto max-w-7xl sm:px-4">
      <div class="relative isolate overflow-hidden bg-stone-900 px-6 py-16 shadow-2xl sm:rounded-3xl sm:px-16">
        <figure class="mx-auto max-w-2xl">
          <p class="sr-only">5 out of 5 stars</p>
          <div class="flex gap-x-1 text-yellow-400/90">
            <svg class="size-5 flex-none" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
